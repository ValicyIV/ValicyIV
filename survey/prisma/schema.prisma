generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
}

model SurveyResponse {
  id                 Int      @id @default(autoincrement())
  createdAt          DateTime @default(now())
  sentimentScore     Int
  implementationAreas String // Stored as JSON string
  concerns           String
  comments           String?
}
